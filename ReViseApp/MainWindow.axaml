<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="ReViseApp.MainWindow"
        Title="ReViseApp - Dashboard"
        Width="1024" Height="576"
        Background="#F5F5F5">

    <!-- Root Layout: Sidebar + Content -->
    <Grid ColumnDefinitions="220,*">

        <!-- Sidebar -->
        <Border Background="#2C3E50" Width="220">
            <Grid RowDefinitions="Auto,*" Margin="0,20,0,20">
                <!-- App Title -->
                <TextBlock Text="ReViseApp"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="White"
                        Margin="20,0,0,20"
                        Grid.Row="0"/>

                <!-- Button housing stretches to bottom -->
                <Border Grid.Row="1"
                        Background="#34495E"
                        CornerRadius="0,0,0,0"
                        Padding="10,10,0,10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Spacing="8">
                        <Button Content="Dashboard" Height="40"
                                HorizontalAlignment="Stretch" VerticalContentAlignment="Center"
                                CornerRadius="20,0,0,20" Background="#3D566E" Foreground="White"
                                Click="Dashboard_Click"/>
                        <Button Content="Vehicles" Height="40"
                                HorizontalAlignment="Stretch" VerticalContentAlignment="Center"
                                CornerRadius="20,0,0,20" Background="#3D566E" Foreground="White"
                                Click="Vehicles_Click"/>
                        <Button Content="Add Log" Height="40"
                                HorizontalAlignment="Stretch" VerticalContentAlignment="Center"
                                CornerRadius="20,0,0,20" Background="#3D566E" Foreground="White"
                                Click="Logs_Click"/>
                        <Button Content="View History" Height="40"
                                HorizontalAlignment="Stretch" VerticalContentAlignment="Center"
                                CornerRadius="20,0,0,20" Background="#3D566E" Foreground="White"
                                Click="History_Click"/>
                        <Button Content="Settings" Height="40"
                                HorizontalAlignment="Stretch" VerticalContentAlignment="Center"
                                CornerRadius="20,0,0,20" Background="#3D566E" Foreground="White"
                                Click="Settings_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Content -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20">
            <ContentControl x:Name="ContentArea"/>
        </Border>
    </Grid>
</Window>